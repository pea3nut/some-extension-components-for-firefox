{
    "manifest_version": 2,
    "name": "drag-link",
    "version": "0.0.1",
    
    "description": "open link in new tag which <a> tag is dragged",
    
    "applications": {
        "gecko": {
          "id": "pea3nut@qq.com"
        }
    },
    
    "permissions": [],
    "background": {
        "scripts": [
            "drag-link.background.js"
        ]
    },
    
    "content_scripts": [{
      "matches": ["<all_urls>"],
      "js": [
          "drag-link.content.js"
      ]
    }]
}